{
  "name": "fcd-site",
  "version": "0.0.1",
  "description": "",
  "license": "Apache-2.0",
  "scripts": {
    "start": "npm run budo",
    "build": "browserify src/js/index.js > public/index.js",
    "buildmin": "browserify -g uglifyify src/js/index.js > public/index.js",
    "budo": "budo src/js/index.js:index.js --dir ./public --live --verbose --port 3001",
    "discify": "browserify --full-paths src/js/index.js | discify --open",
    "build-css": "node-sass --include-path node_modules/bourbon/app/assets/stylesheets --include-path node_modules/bourbon-neat/app/assets/stylesheets --include-path src/scss src/scss/index.scss public/index.css -x",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "dependencies": {
    "bezier-easing": "2.0.3",
    "eventemitter3": "2.0.2",
    "bourbon": "^4.2.7",
    "bourbon-neat": "^1.7.4"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-2": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "budo": "^9.4.7",
    "derequire": "^2.0.3",
    "discify": "^1.6.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
